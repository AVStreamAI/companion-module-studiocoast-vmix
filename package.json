{
	"name": "studiocoast-vmix",
	"version": "3.0.0",
	"main": "dist/index.js",
	"scripts": {
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts --fix",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-studiocoast-vmix.git"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"yarn lint --fix --",
			"git add"
		]
	},
	"eslintIgnore": [
		"/tests/*.test.ts"
	],
	"license": "MIT",
	"dependencies": {
		"@companion-module/base": "~1.1.0",
		"lodash": "~4.17.21",
		"xml2js": "~0.4.23"
	},
	"devDependencies": {
		"@companion-module/tools": "~0.5.2",
		"@types/jest": "~29.2.3",
		"@types/lodash": "~4.14.190",
		"@types/node": "~18.11.9",
		"@types/xml2js": "~0.4.11",
		"@typescript-eslint/eslint-plugin": "~5.44.0",
		"@typescript-eslint/parser": "~5.44.0",
		"eslint": "~8.28.0",
		"eslint-config-prettier": "~8.5.0",
		"eslint-plugin-prettier": "~4.2.1",
		"husky": "~8.0.2",
		"jest": "~29.3.1",
		"lint-staged": "~13.0.4",
		"prettier": "~2.8.0",
		"rimraf": "~3.0.2",
		"ts-jest": "~29.0.3",
		"typescript": "~4.9.3"
	}
}
